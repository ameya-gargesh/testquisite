<%- model_class = Case -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @case.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:display_order) %>:</strong></dt>
  <dd><%= @case.display_order %></dd>
  <dt><strong><%= model_class.human_attribute_name(:priority_id) %>:</strong></dt>
  <dd><%= @case.priority_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:case_type_id) %>:</strong></dt>
  <dd><%= @case.case_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:suite_id) %>:</strong></dt>
  <dd><%= @case.suite_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              cases_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_case_path(@case), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              case_path(@case),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
